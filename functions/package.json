{
  "name": "functions",
  "scripts": {
    "lint:es": "eslint --ext .ts .",
    "lint:ts": "tsc --noEmit ",
    "lint:prettier": "prettier --list-different .",
    "lint": "concurrently npm:lint:*",
    "lint-fix": "concurrently npm:lint:ts \"npm run lint:prettier -- --write\" \"npm run lint:es -- --fix\"",
    "lint-fix:ts": "npm:lint:ts",
    "lint-fix:es": "eslint --ext .ts . --fix",
    "build": "tsc",
    "serve": "kill-port --port 8080,9000 && npm run build && firebase emulators:start",
    "shell": "npm run build && firebase functions:shell",
    "stop": "lsof -t -i :5001 -i :5000 -i :8080 -i :9000 -i :9595 | xargs kill -9",
    "start": "npm run shell",
    "deploy": "firebase deploy",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "16"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "^9.12.0",
    "firebase-functions": "^3.14.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.8.0",
    "concurrently": "^7.0.0",
    "eslint": "^7.6.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.22.0",
    "firebase-functions-test": "^0.2.0",
    "prettier": "^2.5.1",
    "typescript": "^3.8.0"
  },
  "private": true
}
