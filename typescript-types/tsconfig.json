{
  "compilerOptions": {
    "alwaysStrict": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "build",
    "rootDir": ".",
    "skipLibCheck": true,
    "strict": true
  },
  "exclude": ["node_modules", "build/**/*"],
  "include": ["**/*.ts", "**/*.tsx"],
  "references": []
}